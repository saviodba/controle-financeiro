<!DOCTYPE HTML>
<html lang="pt-br">

<html>

<head>
    <meta charset="utf-8">
    <title>Lista de Despesas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <script src="js/jquery-3.5.1.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    <div id="menu"></div>

    <div class="container">
        <div class="row mt-2">
            <div class="col-md-8">
                <table class="table">
                    <thead class="table table-dark">
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Despesa</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Data</th>
                            <th scope="col">Tipo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for( let i=0; i < dados.length; i++) {%>

                            <tr class="linha" onclick="cadastro( '<%=dados[i]._id%>' )">
                                <td>
                                    <a style="text-decoration: none;color: black;"
                                        href="/deletar?id_despesa=<%=dados[i]._id  %> ">
                                        <i class="bi bi-x-square"></i>
                                    </a>
                                </td>

                                <td scope="row">
                                    <%=dados[i].despesa%>
                                </td>
                                <td>
                                    <%=dados[i].valor %>
                                </td>
                                <td>
                                    <%=dados[i].data %>
                                </td>
                                <td>
                                    <%=dados[i].tipodespesa%>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>

            <div class="col-md-2">
                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">Mês ref. </h5>
                        <input class="card-text" type="month" value="<%=mesano%>" id="dt_desp"
                            onchange="EnviarData(this.value)">
                        </input>
                    </div>
                </div>

                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">Despesas Fixas</h5>
                        <strong class="card-text">
                            <%= valorFormatado %>
                        </strong>

                    </div>
                </div>

                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">Despesas Flexiveis</h5>
                        <strong class="card-text">
                            R$ 0,00
                        </strong>

                    </div>
                </div>

                <div class="card" style="width: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">Cartão Credito</h5>
                        <strong class="card-text">
                            R$ 0,00
                        </strong>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/script.js"></script>
    <script src="js/despesa.js"></script>
</body>

</html>
