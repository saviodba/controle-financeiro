<!DOCTYPE HTML>
<html lang="pt-br">

<html>

<head>
    <meta charset="utf-8">
    <title>Cadastro de Despesa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/estilo.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <script src="js/jquery-3.5.1.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    <div id="menu"></div>
    <div class="container">

        <form role="form" id="form-user-create">
            <div class="col-md-6 offset-md-3">

                <div class="form-group">
                    <label class="col-sm-2 col-form-label">Despesa</label>
                    <input class="form-control" type="text" name="despesa" id="edt_despesa"
                        placeholder="Digite o nome da despesa" />
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-form-label">Valor</label>
                    <input class="form-control" type="text" name="valor" id="edt_valor"
                        placeholder="Digite o valor da despesa" onKeyPress="return(MascaraMoeda(this,'.',',',event))" />
                </div>

                <div class="form-group">
                    <label class="col-sm-6 col-form-label">Tipo de Despesa</label>

                    <select class="form-control" id="getTpDespesa" name="tipodespesa">
                        <option value=""></option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="col-sm col-form-label">Data</label>
                    <input class="form-control" type="date" name="data" id="edt_data"
                        placeholder="Digite o nome da despesa" />
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="situacao" checked id="chk_pago" />
                    <label class="form-check-label">Pago</label>

                </div>

                <div class="col-md-6 mt-2">
                    <button type="submit" class="btn btn-primary" id="btn_gravar">Gravar</button>
                    <button type="button" class="btn btn-primary" id="btn_voltar">Voltar</button>
                </div>
            </div>
        </form>
    </div>
    <script src="classes/Despesa.js"></script>
    <script src="classes/HttpRequest.js"></script>
    <script src="js/script.js"></script>
    <script src="js/despesa.js"></script>
</body>

</html>
